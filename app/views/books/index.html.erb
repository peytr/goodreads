<div class="container">
    <h1>Welcome to Good Reads</h1>

    <% @books.each do |book| %>
        <div class="jumbotron">
            <h3><%= book.title %></h3>
            <p><%= "by #{ book.author}" %></p>
            <p><%= image_tag book.cover, width: 200 %></p>
            <%= link_to "See Book", book_path(book), :class => 'btn btn-success' %>
        </div>
    <% end %>

</div>